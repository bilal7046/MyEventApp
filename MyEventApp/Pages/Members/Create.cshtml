@page
@model MyEventApp.Pages.Members.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Member.RaceTechID" class="control-label"></label>
                <input asp-for="Member.RaceTechID" class="form-control" />
                <span asp-validation-for="Member.RaceTechID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.FirstName" class="control-label"></label>
                <input asp-for="Member.FirstName" class="form-control" />
                <span asp-validation-for="Member.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.LastName" class="control-label"></label>
                <input asp-for="Member.LastName" class="form-control" />
                <span asp-validation-for="Member.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Email" class="control-label"></label>
                <input asp-for="Member.Email" class="form-control" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.MemberType" class="control-label"></label>
                <select asp-for="Member.MemberType" asp-items="Html.GetEnumSelectList<MyEventApp.Enums.MemberType>()" class="form-control"></select>
                <span asp-validation-for="Member.MemberType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.JoinDate" class="control-label"></label>
                <input asp-for="Member.JoinDate" class="form-control" />
                <span asp-validation-for="Member.JoinDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Member.PaidUp" /> @Html.DisplayNameFor(model => model.Member.PaidUp)
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
